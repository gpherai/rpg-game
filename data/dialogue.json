              "text": "De shrine is gezuiverd.",
              "conditions": [
                {"condition_type": "FLAG_SET", "params": {"flag_id": "flag_r1_msq_started"}},
                {"condition_type": "FLAG_SET", "params": {"flag_id": "flag_shrine_boss_defeated"}},
                {"condition_type": "FLAG_NOT_SET", "params": {"flag_id": "flag_r1_msq_completed"}}
              ],
              "effects": [
                {"effect_type": "QUEST_COMPLETE", "quest_id": "q_r1_shrine_purification"},
                {"effect_type": "SET_FLAG", "flag_id": "flag_r1_msq_completed"}
              ],
              "next_node_id": "n_complete",
              "end_conversation": false
            },
            {
              "choice_id": "c_after",
              "text": "Hoe staat het met het heiligdom?",
